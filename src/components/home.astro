<style is:global>
  :root {
    --sec-rgb: 204, 255, 0;
  }
  
  .home-blur-bg {
    background: rgba(20,20,20,0.32);
    backdrop-filter: blur(18px);
    -webkit-backdrop-filter: blur(18px);
    border-radius: 1.2rem;
    padding: 2.2rem 2.2rem 2.2rem 2.2rem;
    box-shadow: 0 0 0 0 transparent;
    margin-bottom: 1.5rem;
  }
  
  .shiny-sec {
    background: linear-gradient(135deg, var(--sec) 25%, #EEFFCC 50%, var(--sec) 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
  }

  /* Debug Panel Styles */
  .debug-panel {
    position: fixed;
    top: 10px;
    left: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    border: 1px solid #333;
    border-radius: 5px;
    padding: 10px;
    z-index: 1000;
    font-family: Arial, sans-serif;
    color: #fff;
    width: 160px;
    display: none; /* Hidden by default */
  }

  .debug-panel h3 {
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 14px;
    text-align: center;
  }

  .debug-panel select {
    width: 100%;
    padding: 5px;
    margin-bottom: 10px;
    background-color: #222;
    color: #fff;
    border: 1px solid #444;
  }

  .debug-panel button {
    width: 100%;
    padding: 5px;
    background-color: #333;
    color: #fff;
    border: 1px solid #555;
    cursor: pointer;
  }

  .debug-panel button:hover {
    background-color: #444;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }
</style>

<script>
  // Get the current script from localStorage or use default
  const currentScript = localStorage.getItem('fluidSimulationScript') || 'script.js';
  
  // Set the selected option in the dropdown
  document.addEventListener('DOMContentLoaded', () => {
    const selectElement = document.getElementById('simulation-mode') as HTMLSelectElement;
    if (selectElement) {
      selectElement.value = currentScript;
    }
    
    // Add keyboard shortcut listener for Alt+Shift+D
    document.addEventListener('keydown', (e) => {
      if (e.altKey && e.shiftKey && e.key === 'D') {
        const debugPanel = document.getElementById('debug-panel');
        if (debugPanel) {
          // Toggle the debug panel visibility
          debugPanel.style.display = debugPanel.style.display === 'none' || !debugPanel.style.display ? 'block' : 'none';
        }
      }
    });
  });
  
  // Apply button click handler
  document.getElementById('apply-mode')?.addEventListener('click', () => {
    const selectElement = document.getElementById('simulation-mode') as HTMLSelectElement;
    if (selectElement) {
      const selectedScript = selectElement.value;
      localStorage.setItem('fluidSimulationScript', selectedScript);
      location.reload();
    }
  });
</script>
